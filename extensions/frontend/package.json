{
  "name": "@m8flow/extensions",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "M8Flow frontend extensions - standalone package for customizations",
  "scripts": {
    "preinstall": "cd ../../spiffworkflow-frontend && npm install || true",
    "start": "vite --config vite.config.ts",
    "build": "vite build --config vite.config.ts",
    "build:spiff": "cross-env VARIANT=spiff vite build --config vite.config.ts",
    "build:m8flow": "cross-env VARIANT=m8flow vite build --config vite.config.ts",
    "dev": "vite --config vite.config.ts --host 0.0.0.0",
    "preview": "vite preview --config vite.config.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.25.1"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.0.0",
    "@mui/material": "^7.3.5"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.12.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "jsdom": "^26.1.0",
    "sass-embedded": "^1.79.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.3",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
